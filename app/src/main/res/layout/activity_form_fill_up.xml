            android:text=""/>
        <TextView
            android:id="@+id/weightLiftingTVID"
            android:textSize="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/environmentTVID"
