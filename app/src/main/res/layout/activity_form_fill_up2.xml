<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".FormFillUpActivity2"
    android:background="#FFEB3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Form Page 2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Responsibility: "/>

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginTop="5dp"
            android:ems="13"
            android:inputType="textMultiLine"
            android:hint="Type Here The Responsibilities"
            android:background="#F8EB7E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Location: "/>


    </LinearLayout>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Suburb"
        android:layout_marginBottom="10dp"
        android:background="#F8EB7E"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Street"
        android:layout_marginBottom="10dp"
        android:background="#F8EB7E"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="State"
        android:layout_marginBottom="10dp"
        android:background="#F8EB7E"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Name of the person to meet: "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mr. John Dev"
            android:background="#F8EB7E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Your company name: "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex. Mates Group"
            android:background="#F8EB7E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/backBtn2ID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginRight="20dp"
            app:backgroundTint="#8BC34A"/>

        <Button
            android:id="@+id/nextPageBtn2ID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Next Page"
            app:backgroundTint="#8BC34A"/>
    </LinearLayout>

    </LinearLayout>


</ScrollView>